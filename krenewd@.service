[Unit]
Description=Kerberos Ticket Renewal Daemon for user %i
Documentation=https://github.com/SIGSEGV111/krenewd
After=network.target
StartLimitIntervalSec=0
StartLimitBurst=2147483647

[Service]
Type=forking
ExecStart=/usr/bin/krenewd --master 0 --destroy --verbose
User=%i
Restart=always
RestartSec=15
WorkingDirectory=/tmp
UMask=0077

# Security
PrivateTmp=false
NoNewPrivileges=true

[Install]
WantedBy=multi-user.target
